<Window x:Class="DIDIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIDIS"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900" Background="{StaticResource MainColor}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- סרגל עליון עם כפתורים -->
        <StackPanel Orientation="Horizontal"
            Grid.Row="0" Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="20,10,0,10"
            Background="Transparent">

            <StackPanel.Resources>
                <!-- סגנון אחיד לכל הכפתורים -->
                <Style TargetType="Button">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Margin" Value="10,0"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <Button Content="התחברות" Click="Login_Click"/>
            <Button Content="הרשמה" Click="Register_Click"/>
            <Button Content="תפריט" Click="Menu_Click"/>
            <Button x:Name="cart" Content="cart" Click="Cart_Click"/>
        </StackPanel>

        <!-- כותרת האתר -->
        <Label Content="D I D I ' S"
       Grid.Row="0" Grid.Column="1"
       HorizontalAlignment="Right"
       VerticalAlignment="Center"
       Margin="0,10,20,10"
        FontFamily="Corbel Light"
       FontSize="30"
                FontWeight="Bold"
       />

        <!-- אזור התוכן המרכזי -->
        <Frame x:Name="mainFrame"
   Grid.Row="1" Grid.ColumnSpan="2"
   Margin="0"
   NavigationUIVisibility="Hidden"
   HorizontalAlignment="Stretch"
   VerticalAlignment="Stretch" />
    </Grid>
</Window>
