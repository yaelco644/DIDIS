<Page x:Class="DIDIS.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DIDIS"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Login">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" Background="#CCFFFFFF" CornerRadius="30" 
     Grid.ColumnSpan="3" Margin="245,0,245,22" Grid.Row="1">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Margin" Value="0,5"/>
                        <Setter Property="Width" Value="200"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                    </Style>

                    <Style TargetType="PasswordBox">
                        <Setter Property="Margin" Value="0,5"/>
                        <Setter Property="Width" Value="200"/>
                        <Setter Property="Height" Value="30"/>
                    </Style>

                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="0,20"/>
                    </Style>

                </StackPanel.Resources>

                <!-- כותרת עמוד -->
                <TextBlock Text="LOGIN" FontSize="24" Foreground="Black" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- שם משתמש -->
                <Grid>
                    <TextBox x:Name="txtUsername" VerticalContentAlignment="Center" TextChanged="txtUsername_TextChanged"/>
                    <TextBlock Text="Username" x:Name="placeholderUsername" 
                 Foreground="Gray"
                 Margin="5,0,0,0"          
                 VerticalAlignment="Center"
                 IsHitTestVisible="False"
                 />
                </Grid>

                <!-- סיסמה -->
                <Grid>
                    <PasswordBox x:Name="txtPassword" VerticalContentAlignment="Center" PasswordChanged="txtPassword_PasswordChanged"/>
                    <TextBlock Text="Password" x:Name="placeholderPassword"
                 Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center"
                 IsHitTestVisible="False" />
                </Grid>

                <!-- כפתור Login -->
                <Button x:Name="btnLogin" Content="Login"
          Width="100" Height="30" Background="#7C98FF" Foreground="White" FontWeight="Bold"
          Click="btnLogin_Click"/>

                <TextBlock FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"> אין לך משתמש? 
             <Hyperlink Click="Register_Click" Foreground="Blue" Cursor="Hand"> להרשמה </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>

    </Grid>
</Page>
