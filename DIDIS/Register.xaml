<Page x:Class="DIDIS.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DIDIS"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Register">

    <Grid>
        <Border BorderBrush="Black" Background="#CCFFFFFF" CornerRadius="30" 
            Width="400" Height="379" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Margin" Value="0,5"/>
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                    </Style>

                    <Style TargetType="PasswordBox">
                        <Setter Property="Margin" Value="0,5"/>
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="25"/>
                    </Style>

                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="0,20"/>
                    </Style>
                </StackPanel.Resources>

                <!-- כותרת עמוד -->
                <TextBlock Text="REGISTRATION" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- שם משתמש -->
                <Grid>
                    <TextBox x:Name="txtUsername" VerticalContentAlignment="Center" TextChanged="txtUsername_TextChanged"/>
                    <TextBlock Text="Username" x:Name="placeholderUsername" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                </Grid>

                <!-- סיסמה -->
                <Grid>
                    <PasswordBox x:Name="txtPassword" VerticalContentAlignment="Center" PasswordChanged="txtPassword_PasswordChanged"/>
                    <TextBlock Text="Password" x:Name="placeholderPassword" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                </Grid>

                <!-- אימות סיסמה -->
                <Grid>
                    <PasswordBox x:Name="txtConfirmPassword" VerticalContentAlignment="Center" PasswordChanged="txtConfirmPassword_PasswordChanged"/>
                    <TextBlock Text="Confirm Password" x:Name="placeholderConfirmPassword" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                </Grid>

                <!-- מספר טלפון -->
                <Grid>
                    <TextBox x:Name="txtPhone" VerticalContentAlignment="Center" TextChanged="txtPhone_TextChanged"/>
                    <TextBlock Text="Phone Number" x:Name="placeholderPhone" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                </Grid>

                <!-- אימייל -->
                <Grid>
                    <TextBox x:Name="txtEmail" VerticalContentAlignment="Center" TextChanged="txtEmail_TextChanged"/>
                    <TextBlock Text="Email" x:Name="placeholderEmail" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                </Grid>

                <!-- כתובת -->
                <Grid>
                    <TextBox x:Name="txtAddress" VerticalContentAlignment="Center" TextChanged="txtAddress_TextChanged"/>
                    <TextBlock Text="Address" x:Name="placeholderAddress" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                </Grid>

                <!-- כפתור הרשמה -->
                <Button x:Name="btnRegister" Content="Register" Width="120" Height="35" Background="#7C98FF" Foreground="White" FontWeight="Bold" Click="btnRegister_Click"/>

                <!-- קישור חזרה ל-Login -->
                <TextBlock FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,5">
                יש לך כבר משתמש? 
                <Hyperlink Click="BackToLogin_Click" Foreground="Blue" Cursor="Hand">להתחברות</Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>
    </Grid>
</Page>
